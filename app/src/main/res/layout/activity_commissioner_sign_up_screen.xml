<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signupscreens.CommissionerSignUpScreen">
   <RelativeLayout
       android:layout_marginTop="48dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/authenticate_textview_commissioner_sign_in_screen"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="36sp"
           android:layout_centerHorizontal="true"
           android:fontFamily="sans-serif-black"
           android:layout_margin="8dp"
           android:gravity="center"
           android:textColor="@color/primaryDarkColor"
           android:text="@string/authenticateYourselfString"/>
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/outlinedTextFieldCommissionsNameSignIn_commissioner_sign_in_screen"
           android:layout_width="320dp"
           android:layout_height="wrap_content"
           android:hint="@string/hint_login_name"
           app:hintTextColor="@color/primaryColor"
           android:textColorHint="@color/primaryColor"
           app:boxStrokeColor="@color/primaryColor"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/authenticate_textview_commissioner_sign_in_screen"
           android:layout_marginTop="10dp"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/commissionsNameEdittextSignIn_commissioner_sign_in_screen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxEms="1"
               android:maxLines="1"
               android:singleLine="true"
               android:fontFamily="sans-serif"
               android:textColor="@color/primaryTextColor"
               android:textColorHint="#757575"
               android:textSize="20sp"
               android:inputType="textPersonName"
               tools:ignore="TextContrastCheck" />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/outlinedTextFieldCommissionersNameSignIn_commissioner_sign_in_screen"
           android:layout_width="320dp"
           android:layout_height="wrap_content"
           android:hint="@string/hint_login_commisioners_name"
           app:hintTextColor="@color/primaryColor"
           android:textColorHint="@color/primaryColor"
           app:boxStrokeColor="@color/primaryColor"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/outlinedTextFieldCommissionsNameSignIn_commissioner_sign_in_screen"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/CommissionersNameEdittextSignIn_commissioner_sign_in_screen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxEms="1"
               android:maxLines="1"
               android:singleLine="true"
               android:fontFamily="sans-serif"
               android:textColor="@color/primaryTextColor"
               android:textColorHint="#757575"
               android:textSize="20sp"
               android:inputType="textPersonName"
               tools:ignore="TextContrastCheck" />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/outlinedTextFieldPhoneNoSignIn_commissioner_sign_in_screen"
           android:layout_width="320dp"
           android:layout_height="wrap_content"
           android:hint="@string/hint_login_phone_no"
           app:hintTextColor="@color/primaryColor"
           android:textColorHint="@color/primaryColor"
           app:boxStrokeColor="@color/primaryColor"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/outlinedTextFieldCommissionersNameSignIn_commissioner_sign_in_screen"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/phoneNoEdittextSignIn_commissioner_sign_up_screen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxEms="1"
               android:maxLines="1"
               android:singleLine="true"
               android:inputType="phone"
               android:fontFamily="sans-serif"
               android:textColor="@color/primaryTextColor"
               android:textColorHint="#757575"
               android:textSize="20sp"
               tools:ignore="TextContrastCheck" />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/outlinedTextFieldEmailSignIn_commissioner_sign_in_screen"
           android:layout_width="320dp"
           android:layout_height="wrap_content"
           android:hint="@string/hint_login_email"
           app:hintTextColor="@color/primaryColor"
           android:textColorHint="@color/primaryColor"
           app:boxStrokeColor="@color/primaryColor"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/outlinedTextFieldPhoneNoSignIn_commissioner_sign_in_screen"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/emailEdittextSignIn_commissioner_sign_up_screen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxEms="1"
               android:maxLines="1"
               android:singleLine="true"
               android:inputType="textEmailAddress"
               android:fontFamily="sans-serif"
               android:textColor="@color/primaryTextColor"
               android:textColorHint="#757575"
               android:textSize="20sp"
               tools:ignore="TextContrastCheck" />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/outlinedTextFieldAadharNoSignIn_commissioner_sign_in_screen"
           android:layout_width="320dp"
           android:layout_height="wrap_content"
           android:hint="@string/hint_login_aadhar_no"
           app:hintTextColor="@color/primaryColor"
           android:textColorHint="@color/primaryColor"
           app:boxStrokeColor="@color/primaryColor"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/outlinedTextFieldEmailSignIn_commissioner_sign_in_screen"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/aadharNoEdittextSignIn_commissioner_sign_up_screen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxEms="1"
               android:maxLines="1"
               android:singleLine="true"
               android:inputType="number"
               android:fontFamily="sans-serif"
               android:textColor="@color/primaryTextColor"
               android:textColorHint="#757575"
               android:textSize="20sp"
               tools:ignore="TextContrastCheck" />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/outlinedTextFieldPasswordSignIn_commissioner_sign_in_screen"
           android:layout_width="320dp"
           android:layout_height="wrap_content"
           android:hint="@string/hint_login_password"
           app:hintTextColor="@color/primaryColor"
           android:textColorHint="@color/primaryColor"
           app:boxStrokeColor="@color/primaryColor"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           app:passwordToggleEnabled="true"
           android:layout_below="@+id/outlinedTextFieldAadharNoSignIn_commissioner_sign_in_screen"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/passwordEdittextSignIn_commissioner_sign_up_screen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxEms="1"
               android:maxLines="1"
               android:singleLine="true"
               android:inputType="textPassword"
               android:fontFamily="sans-serif"
               android:textColor="@color/primaryTextColor"
               android:textColorHint="#757575"
               android:textSize="20sp"
               tools:ignore="TextContrastCheck" />
       </com.google.android.material.textfield.TextInputLayout>
       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/submitButton_commissioner_sign_up_screen"
           android:layout_width="280dp"
           android:layout_height="wrap_content"
           android:background="@drawable/button_style_2"
           android:textColor="@color/white"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="24dp"
           android:layout_below="@id/outlinedTextFieldPasswordSignIn_commissioner_sign_in_screen"
           android:textSize="28sp"
           android:text="@string/submitString"/>
       <ProgressBar
           android:id="@+id/progress_bar_commissioner_sign_up_screen"
           android:layout_width="56dp"
           android:layout_height="56dp"
           android:layout_margin="8dp"
           android:visibility="invisible"
           android:layout_below="@+id/submitButton_commissioner_sign_up_screen"
           android:layout_centerHorizontal="true"/>
   </RelativeLayout>
</ScrollView>